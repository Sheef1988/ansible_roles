hostname: {{ harbor_hostname }}

http:
  port: 80

https:
  port: 443
  certificate: {{ harbor_cert }}
  private_key: {{ harbor_key }}

harbor_admin_password: {{ harbor_admin_password }}

database:
  password: {{ harbor_db_password }}
  max_idle_conns: 100
  max_open_conns: 900

data_volume: /data

trivy:
  ignore_unfixed: false
  skip_update: false
  offline_scan: false
  security_check: vuln
  insecure: false

jobservice:
  max_job_workers: 10

log:
  level: info
  local:
    rotate_count: 50
    rotate_size: 200M
    location: /var/log/harbor

_version: 2.6.0

proxy:
  http_proxy:
  https_proxy:
  no_proxy:
  components:
    - core
    - jobservice
    - trivy

upload_purging:
  enabled: true
  age: 168h
  interval: 24h
  dryrun: false

cache:
  enabled: false
  expire_hours: 24

notification:
  webhook_job_max_retry: 10
